---
interface Props {
    date: Date;
}

let { date } = Astro.props;
date = new Date(date.getTime() + 2 * 60 * 60 * 1000);
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
        })
    }
</time>
