---
let { date } = Astro.props;
let oneDay = 24 * 60 * 60 * 1000; // Number of milliseconds in a day
date = new Date(date.getTime() + oneDay);
---

<time datetime={date}>
    {
        date.toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
        })
    }
</time>
