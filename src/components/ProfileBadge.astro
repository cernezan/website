---
import { Picture } from "@astrojs/image/components";

const { title, link, profilePicture, subText } = Astro.props;
---

<a href={link} class="mr-auto flex hover:brightness-75">
    <Picture
        src={profilePicture}
        alt="Profile Picture"
        class="rounded-full"
        sizes="400"
        format={"jpeg"}
        widths={[400, 400]}
        width={50}
        height={50}
        aspectRatio={1}
    />
    <div class="my-auto ml-3">
        <div class="my-auto text-lg font-extrabold">{title}</div>
        <div class="-mt-1 text-sm text-zinc-600">{subText}</div>
    </div>
</a>
