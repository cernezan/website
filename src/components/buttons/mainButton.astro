---
import { Icon } from "astro-icon";

export interface Props {
    text?: string;
    href: string;
    leftIcon?: string;
    rightIcon?: string;
    target?: string;
    isSecondary?: boolean;
    className?: string;
}

let {
    text,
    href,
    leftIcon,
    rightIcon,
    target,
    className = "",
    isSecondary = false,
} = Astro.props;
---

<a href={href} target={target}>
    <div
        class={!isSecondary
            ? "flex justify-center rounded-3xl border gap-x-2 border-zinc-200 bg-zinc-100 px-4 py-2 text-center font-semibold transition-colors delay-75 ease-out hover:border-zinc-300" +
              " " +
              className
            : "flex justify-center rounded-3xl border gap-x-2 border-zinc-100 px-4 py-2 text-center font-semibold transition-colors delay-75 ease-out hover:border-zinc-200" +
              " " +
              className}
    >
        {leftIcon && <Icon class="my-auto h-4 w-4" name={leftIcon} />}
        {text && <span>{text}</span>}
        {rightIcon && <Icon class="my-auto h-4 w-4" name={rightIcon} />}
    </div>
</a>
