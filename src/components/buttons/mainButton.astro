---
import { Icon } from "astro-icon";

export interface Props {
    text?: string;
    href: string;
    leftIcon?: string;
    rightIcon?: string;
    isSecondary?: boolean;
}

let { text, href, leftIcon, rightIcon, isSecondary = false } = Astro.props;
---

<a href={href}>
    <div
        class={!isSecondary
            ? "flex justify-center rounded-3xl border gap-x-2 border-zinc-200 bg-zinc-100 px-5 py-3 text-center font-semibold transition-colors delay-75 ease-out hover:border-zinc-300"
            : "flex justify-center rounded-3xl border gap-x-2 border-zinc-200 px-5 py-3 text-center font-semibold transition-colors delay-75 ease-out hover:border-zinc-300"}
    >
        {leftIcon && <Icon class="my-auto h-4 w-4" name={leftIcon} />}
        {text && <span>{text}</span>}
        {rightIcon && <Icon class="my-auto h-4 w-4" name={rightIcon} />}
    </div>
</a>
