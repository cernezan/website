---
import { Icon } from "astro-icon";

export interface Props {
    href: string;
    text?: string;
    icon?: string;
}

const { text, href, icon } = Astro.props;
---

<a
    class="inline-block rounded-full border border-zinc-300 px-3 py-2 text-sm font-semibold transition-colors duration-300 hover:border-zinc-700 hover:text-zinc-700"
    href={href}
>
    {icon && <Icon class="h-5 w-5" name={icon} />}
    {text}
</a>
