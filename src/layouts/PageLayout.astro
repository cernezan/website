---
import PageImage from "../components/PageImage.astro";
import MainLayout from "./MainLayout.astro";
import PageTitle from "../components/PageTitle.astro";
import CategoryDate from "../components/CategoryDate.astro";

import type { CollectionEntry } from "astro:content";

const { title, headerImage, pubDate, updatedDate, description, frontmatter } =
    Astro.props;
---

<MainLayout
    title={title || frontmatter.title}
    image={headerImage}
    description={description || frontmatter.description}
>
    <PageImage image={headerImage} title={title} />
    <CategoryDate pubDate={pubDate} updatedDate={updatedDate} />
    <PageTitle>{title || frontmatter.title}</PageTitle>

    <slot />
</MainLayout>
