---
import PageImage from "../components/PageImage.astro";
import MainLayout from "./MainLayout.astro";
import PageTitle from "../components/PageTitle.astro";
import CategoryDate from "../components/CategoryDate.astro";

import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">["data"];

const { title, headerImage, pubDate, updatedDate, description } = Astro.props;
---

<MainLayout title={title} image={headerImage} description={description}>
    <PageImage image={headerImage} title={title} />
    <CategoryDate pubDate={pubDate} updatedDate={updatedDate} />
    <PageTitle>{title}</PageTitle>

    <slot />
</MainLayout>
