---
import AppLayout from "../../layouts/AppLayout.astro";
import MainButton from "../../components/buttons/mainButton.astro";

// Heroicons imports
import ClockIcon from 'astro-heroicons/outline/Clock.astro';
import BellIcon from 'astro-heroicons/outline/Bell.astro';
import CalendarDaysIcon from 'astro-heroicons/outline/CalendarDays.astro';
import QueueListIcon from 'astro-heroicons/outline/QueueList.astro';
import ChartBarIcon from 'astro-heroicons/outline/ChartBar.astro';
import FireIcon from 'astro-heroicons/outline/Fire.astro';
import BoltIcon from 'astro-heroicons/outline/Bolt.astro';
import HeartIcon from 'astro-heroicons/outline/Heart.astro';
import ScaleIcon from 'astro-heroicons/outline/Scale.astro';

// Image paths (using public folder)
const downloadAppStore = '/assets/fastSlow/downloadAppStore.svg';
const mockupImage = '/assets/fastSlow/mockup.png';

const appName = "Fast Slow";
const primaryColor = "#F08549";
const secondaryColor = "#416FD3";
const backgroundColor = "#EFECE7";
const description = "Fast Slow makes intermittent fasting easy, stress-free, and effective. Track your fasting windows with a clear visual timeline and discover the benefits of fasting made simple.";
---

<AppLayout title={`${appName} â€” Intermittent Fasting Made Simple`} description={description}>
    <!-- Apple iTunes App Smart Banner -->
    <meta name="apple-itunes-app" content="app-id=6749188352" slot="head" />
    <!-- Hero Section -->
    <section aria-label="Fast Slow hero" class="relative mx-auto max-w-7xl px-4 sm:px-6 py-16 overflow-hidden">
        <!-- Decorative gradient blob -->
        <div class="pointer-events-none absolute inset-x-0 -top-24 -z-10 mx-auto h-[34rem] w-full max-w-[48rem] rounded-full opacity-25 blur-3xl" style={`background: radial-gradient(60% 60% at 50% 40%, ${primaryColor} 0%, transparent 70%)`}></div>

        <div class="grid items-center gap-8 lg:gap-12 lg:grid-cols-2">
            <!-- Left: copy -->
            <div class="text-center lg:text-left">
                <span class="inline-flex w-fit items-center gap-2 rounded-full border border-black/5 px-3 py-1 text-xs font-semibold" style={`background: rgba(240, 133, 73, 0.08); color: ${primaryColor}`}>
                    Intermittent Fasting Made Simple
                </span>
                <h1 class="mt-5 text-4xl font-extrabold leading-tight tracking-tight md:text-5xl lg:text-6xl">{appName}</h1>
                <p class="mt-4 max-w-xl mx-auto lg:mx-0 text-lg text-zinc-700">{description}</p>

                <div class="mt-7 flex flex-col items-center lg:items-start gap-3 sm:flex-row">
                    <!-- App Store button with SVG -->
                    <a href="https://apps.apple.com/si/app/fast-intermittent-fasting-16-8/id6749188352" class="inline-block transition-transform hover:scale-105">
                        <img src={downloadAppStore} alt="Download on the App Store" class="h-12 w-auto">
                    </a>
                </div>

                <!-- Key benefits -->
                <div class="mt-8 space-y-2">
                    <div class="flex items-center gap-3 justify-center lg:justify-start">
                        <div class="h-2 w-2 rounded-full flex-shrink-0" style={`background: ${primaryColor}`}></div>
                        <span class="text-sm text-zinc-600">Track fasting periods with visual timeline</span>
                    </div>
                    <div class="flex items-center gap-3 justify-center lg:justify-start">
                        <div class="h-2 w-2 rounded-full flex-shrink-0" style={`background: ${primaryColor}`}></div>
                        <span class="text-sm text-zinc-600">Smart reminders and notifications</span>
                    </div>
                    <div class="flex items-center gap-3 justify-center lg:justify-start">
                        <div class="h-2 w-2 rounded-full flex-shrink-0" style={`background: ${primaryColor}`}></div>
                        <span class="text-sm text-zinc-600">Flexible schedules: 16:8, 18:6, 20:4, OMAD</span>
                    </div>
                </div>
            </div>

            <!-- Right: app mockup -->
            <div class="mx-auto w-full max-w-sm px-4 lg:px-0">
                <img src={mockupImage} alt="Fast Slow app interface showing fasting timer and progress" class="w-full h-auto">
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="mx-auto max-w-7xl px-4 sm:px-6 py-16">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-extrabold md:text-4xl">Everything You Need for Successful Fasting</h2>
            <p class="mt-4 text-lg text-zinc-600">Whether you're new to fasting or experienced, Fast Slow adapts to your lifestyle</p>
            
            <!-- Product Hunt badge - placed after the heading -->
            <div class="mt-6 flex justify-center">
                <a href="https://www.producthunt.com/products/fast-slow-timeline-based-fasting?embed=true&utm_source=badge-featured&utm_medium=badge&utm_source=badge-fast&#0045;slow" target="_blank" class="inline-block transition-transform hover:scale-105">
                    <img src="https://api.producthunt.com/widgets/embed-image/v1/featured.svg?post_id=1009748&theme=light&t=1756395716132" alt="Fast&#0032;Slow - Fast&#0032;Slow&#0032;makes&#0032;fasting&#0032;easy&#0032;with&#0032;a&#0032;visual&#0032;timeline | Product Hunt" style="width: 200px; height: 43px;" width="200" height="43" />
                </a>
            </div>
        </div>

        <!-- Free Features -->
        <div class="mb-16">
            <h3 class="text-xl font-bold mb-8 text-center" style={`color: ${primaryColor}`}>Free Features</h3>
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                <div class="rounded-2xl border border-zinc-200/60 bg-white/80 p-6">
                    <div class="mb-3 h-10 w-10 rounded-lg flex items-center justify-center" style={`background: rgba(240, 133, 73, 0.1)`}>
                        <ClockIcon class="h-6 w-6" style={`color: ${primaryColor}`} />
                    </div>
                    <h4 class="font-semibold text-zinc-900">Fasting Timer & Timeline</h4>
                    <p class="mt-2 text-zinc-600">Track your eating and fasting periods with a clean, easy-to-read visual timeline</p>
                </div>
                
                <div class="rounded-2xl border border-zinc-200/60 bg-white/80 p-6">
                    <div class="mb-3 h-10 w-10 rounded-lg flex items-center justify-center" style={`background: rgba(240, 133, 73, 0.1)`}>
                        <BellIcon class="h-6 w-6" style={`color: ${primaryColor}`} />
                    </div>
                    <h4 class="font-semibold text-zinc-900">Smart Reminders</h4>
                    <p class="mt-2 text-zinc-600">Never forget to start or finish a fast with intelligent notifications</p>
                </div>
                
                <div class="rounded-2xl border border-zinc-200/60 bg-white/80 p-6">
                    <div class="mb-3 h-10 w-10 rounded-lg flex items-center justify-center" style={`background: rgba(240, 133, 73, 0.1)`}>
                        <CalendarDaysIcon class="h-6 w-6" style={`color: ${primaryColor}`} />
                    </div>
                    <h4 class="font-semibold text-zinc-900">Flexible Schedules</h4>
                    <p class="mt-2 text-zinc-600">Choose from 16:8, 18:6, 20:4, OMAD, or create your own custom fasting plan</p>
                </div>
            </div>
        </div>

        <!-- Premium Features -->
        <div class="mb-16">
            <h3 class="text-xl font-bold mb-8 text-center" style={`color: ${secondaryColor}`}>Fast Slow Plus (Subscription)</h3>
            <div class="grid gap-6 md:grid-cols-2">
                <div class="rounded-2xl border border-zinc-200/60 bg-white/80 p-6">
                    <div class="mb-3 h-10 w-10 rounded-lg flex items-center justify-center" style={`background: rgba(65, 111, 211, 0.1)`}>
                        <QueueListIcon class="h-6 w-6" style={`color: ${secondaryColor}`} />
                    </div>
                    <h4 class="font-semibold text-zinc-900">Complete Fasting History</h4>
                    <p class="mt-2 text-zinc-600">Unlock your complete fasting history and see progress across days, weeks, and months</p>
                </div>
                
                <div class="rounded-2xl border border-zinc-200/60 bg-white/80 p-6">
                    <div class="mb-3 h-10 w-10 rounded-lg flex items-center justify-center" style={`background: rgba(65, 111, 211, 0.1)`}>
                        <ChartBarIcon class="h-6 w-6" style={`color: ${secondaryColor}`} />
                    </div>
                    <h4 class="font-semibold text-zinc-900">Insights & Trends</h4>
                    <p class="mt-2 text-zinc-600">Discover insights and trends to better understand your habits and improve results</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="mx-auto max-w-7xl px-4 sm:px-6 py-16">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-extrabold md:text-4xl">Why Choose Fast Slow?</h2>
            <p class="mt-4 text-lg text-zinc-600">A fasting app built for clarity, simplicity, and your success</p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
            <div class="text-center">
                <div class="mb-4 mx-auto h-16 w-16 rounded-full flex items-center justify-center" style={`background: rgba(240, 133, 73, 0.1)`}>
                    <FireIcon class="h-8 w-8" style={`color: ${primaryColor}`} />
                </div>
                <h3 class="font-semibold text-zinc-900 mb-2">Better Focus</h3>
                <p class="text-zinc-600 text-sm">Improved mental clarity and concentration throughout your day</p>
            </div>

            <div class="text-center">
                <div class="mb-4 mx-auto h-16 w-16 rounded-full flex items-center justify-center" style={`background: rgba(240, 133, 73, 0.1)`}>
                    <BoltIcon class="h-8 w-8" style={`color: ${primaryColor}`} />
                </div>
                <h3 class="font-semibold text-zinc-900 mb-2">More Energy</h3>
                <p class="text-zinc-600 text-sm">Sustained energy levels without the typical food-related crashes</p>
            </div>

            <div class="text-center">
                <div class="mb-4 mx-auto h-16 w-16 rounded-full flex items-center justify-center" style={`background: rgba(240, 133, 73, 0.1)`}>
                    <HeartIcon class="h-8 w-8" style={`color: ${primaryColor}`} />
                </div>
                <h3 class="font-semibold text-zinc-900 mb-2">Overall Wellness</h3>
                <p class="text-zinc-600 text-sm">Support your body's natural healing and metabolic processes</p>
            </div>

            <div class="text-center">
                <div class="mb-4 mx-auto h-16 w-16 rounded-full flex items-center justify-center" style={`background: rgba(240, 133, 73, 0.1)`}>
                    <ScaleIcon class="h-8 w-8" style={`color: ${primaryColor}`} />
                </div>
                <h3 class="font-semibold text-zinc-900 mb-2">Weight Management</h3>
                <p class="text-zinc-600 text-sm">Healthy approach to weight loss and maintaining your ideal weight</p>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="mx-auto max-w-4xl px-4 sm:px-6 py-16 text-center">
        <h2 class="text-3xl font-extrabold md:text-4xl">Start Your Intermittent Fasting Journey Today</h2>
        <p class="mt-4 text-lg text-zinc-600">Spend less time worrying about when to eat and more time enjoying the benefits of intermittent fasting</p>
        
        <div class="mt-8">
            <a href="https://apps.apple.com/si/app/fast-intermittent-fasting-16-8/id6749188352" class="inline-block transition-transform hover:scale-105">
                <img src={downloadAppStore} alt="Download Fast Slow on the App Store" class="h-14 w-auto mx-auto">
            </a>
        </div>
        
        <p class="mt-6 text-sm text-zinc-500">Fast Slow is the fasting companion that keeps you moving forward</p>
    </section>

    <!-- Footer -->
    <footer class="mx-auto max-w-7xl px-4 sm:px-6 py-8 border-t border-zinc-200">
        <div class="text-center space-y-2 sm:space-y-0 sm:space-x-6">
            <a href="/" class="text-sm text-zinc-500 hover:text-zinc-700">Home</a>
            <a href="/fast-slow/privacy" class="text-sm text-zinc-500 hover:text-zinc-700">Privacy Policy</a>
        </div>
    </footer>
</AppLayout>


